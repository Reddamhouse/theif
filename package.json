{
  "name": "thief",
  "version": "1.0.0",
  "description": "An interactive film experience",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "build --dir",
    "dist": "build",
	"start" : "electron .",
	"package" : "electron-packager . thief --platform=win32"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reddamhouse/thief"
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial"
  ],
  "author": "Manu Masson",
  "license": "CC0-1.0",
  "homepage": "https://github.com/reddamhouse/thief",
  "devDependencies": {
    "asar": "^0.12.3",
    "electron-builder": "^6.4.1",
    "electron-packager": "^8.0.0",
    "electron-prebuilt": "^1.2.0"
  },
  "build": {
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 220,
          "type": "file",
          "path": "computed path to artifact, do not specify it - will be overwritten"
        }
      ]
    }
  }
}
